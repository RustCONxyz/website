---
import { Icon } from "astro-icon";
---

<nav class="relative bg-neutral-950 shadow">
    <div class="container mx-auto px-6 py-4">
        <div class="lg:flex lg:items-center lg:justify-between">
            <div class="flex items-center justify-between">
                <div class="text-xl font-semibold text-gray-700">
                    <a href="/" class="text-2xl font-bold text-white transition-colors duration-300 lg:text-3xl hover:text-gray-300">
                        RustCON
                    </a>
                </div>
                <div class="flex lg:hidden">
                    <button type="button" id="menu-toggle" class="text-white hover:text-gray-400 focus:outline-none focus:text-gray-400">
                        <Icon id="icon-menu-open" pack="mdi" name="menu" class="h-6 w-6" />
                        <Icon id="icon-menu-close" pack="mdi" name="close" class="hidden h-6 w-6" /> 
                    </button>
                </div>
            </div>
            <div id="collapsible-menu" class="-translate-x-full opacity-100 absolute inset-x-0 z-20 w-full px-6 py-4 transition-all duration-300 ease-in-out bg-neutral-950 lg:mt-0 lg:p-0 lg:top-0 lg:relative lg:bg-transparent lg:w-auto lg:opacity-100 lg:translate-x-0 lg:flex lg:items-center">
                <div class="-mx-6 flex flex-col lg:flex-row lg:items-center lg:mx-8">
                    <a href="/download" class="px-3 py-2 mx-3 mt-2 transition-colors duration-300 rounded-md lg:mt-0 text-white hover:bg-zinc-900">
                        Download
                    </a>
                    <a href="/developers" class="px-3 py-2 mx-3 mt-2 transition-colors duration-300 rounded-md lg:mt-0 text-white hover:bg-zinc-900">
                        Developers
                    </a>
                    <a href="/donate" class="px-3 py-2 mx-3 mt-2 transition-colors duration-300 rounded-md lg:mt-0 text-white hover:bg-zinc-900">
                        Donate
                    </a>
                    <a href="https://support.rustcon.xyz/" class="px-3 py-2 mx-3 mt-2 transition-colors duration-300 rounded-md lg:mt-0 text-white hover:bg-zinc-900">
                        Support
                    </a>
                </div>
                <div class="my-6 lg:my-0">
                    <a href="https://web.rustcon.xyz/" class="border-blue-500 border-2 px-8 py-2 rounded-md text-white transition-colors duration-300 hover:bg-blue-500">
                        Connect Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>
<script>

    const menu = document.getElementById("collapsible-menu");

    const iconMenuOpen = document.getElementById("icon-menu-open");

    const iconMenuClose = document.getElementById("icon-menu-close");

    function handleClick() {

        menu?.classList.toggle("translate-x-0");
        menu?.classList.toggle("-translate-x-full");

        iconMenuOpen?.classList.toggle("hidden");

        iconMenuClose?.classList.toggle("hidden");

    }

    document.getElementById("menu-toggle")?.addEventListener("click", handleClick);

</script>
